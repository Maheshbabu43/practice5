<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resultinsert">

    <Spinner
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/layoutresource"
        android:padding="4dp">

    </Spinner>

    <EditText
        android:id="@+id/rie1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:hint="Enter internal"
        android:inputType="number"
        android:background="@drawable/layoutresource"
        android:padding="14dp">

    </EditText>

    <EditText
        android:id="@+id/rie2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rie1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/layoutresource"
        android:hint="Enter external"
        android:inputType="number"
        android:padding="15dp">

    </EditText>

    <Button
        android:id="@+id/rib1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rie2"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/buttonshape"
        android:text="insert"
        app:backgroundTint="#FF9800">

    </Button>

    <Button
        android:id="@+id/rib2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rib1"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/buttonshape"
        android:text="update"
        app:backgroundTint="#FF9800">

    </Button>

    <Button
        android:id="@+id/rib3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rib2"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="120dp"
        android:background="@drawable/buttonshape"
        android:text="show"
        app:backgroundTint="#FF9800">

    </Button>

</RelativeLayout>